<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
    <h2><%= @order.email %></h2>
  </header>

  <table class="table table-bordered">
  <thead>
    <tr>
      <th colspan="2">Product</th>
      <th>Unit Price</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
  <% @order.line_items.each do |line_item| %>
    <tr>
    <td>
      <%= image_tag line_item.product.image.thumb.url, alt: line_item.product.name, class: 'img-thumbnail' %>
      <%= line_item.product.name %>
    </td>
    <td><%= line_item.product.description %></td>
    <td>$<%= line_item.item_price_cents / 100.0 %></td>
    <td><%= line_item.quantity %></td>
    <td>$<%= line_item.total_price_cents / 100.0 %></td>
  </tr>
<% end %>
  </tbody>
  <tfoot>
    <tr>
      <th colspan="4">
        TOTAL:
      </th>
      <th>
        $<%= @order.total_cents/ 100.0 %>
      </th>
    </tr>
  </tfoot>
</table>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
  </div>
  <br>
  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
